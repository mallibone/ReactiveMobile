<?xml version = "1.0" encoding = "utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:ReactiveWeather.ViewModels;assembly=ReactiveWeather"
             x:DataType="viewModels:WeatherPortalViewModel"
             x:Class="ReactiveWeather.Views.MainPage">

    <Grid RowDefinitions="120,*,Auto"
          Margin="32,16">
        <!-- Search Area -->
        <Grid ColumnDefinitions="*,Auto">
            <Entry Placeholder="Enter Postalcode" 
                   Text="{Binding SearchEntry}" 
                   Keyboard="Numeric"
                   ClearButtonVisibility="WhileEditing"/>
            <Button Text="Search" 
                    Command="{Binding ExecuteSearch}"/>
        </Grid>
        <!-- List of Locations -->
        <ListView ItemsSource="{Binding Locations}"></ListView>
    </Grid>

</ContentPage>